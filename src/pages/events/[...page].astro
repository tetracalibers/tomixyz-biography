---
import { getCollection } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import Paginator from "$/components/Paginator.astro"
import { PAGE_SIZE } from "$/config"
import EventPreviewList from "$/components/preview/event/EventPreviewList.astro"
import { compareDateForSort } from "$/utils"

let title = "Events"
let description = "登壇したイベント"

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection("event")
  const sortedPosts = allPosts.sort(compareDateForSort)

  return paginate(sortedPosts, {
    pageSize: PAGE_SIZE
  })
}

const { page } = Astro.props

const ogimage = "/og-image/events.png"
---

<DefaultPageLayout content={{ title, description, ogimage }}>
  <EventPreviewList events={page.data} />
  <Paginator page={page} />
</DefaultPageLayout>
