---
import { getCollection, type CollectionEntry } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import Paginator from "$/components/Paginator.astro"
import type { GetStaticPaths, Page } from "astro"
import BookPreviewList from "$components/preview/book/BookPreviewList.astro"
import { i18nPaginate } from "$/utils/i18n/routing/preview-list-page"

const title = "Inputs"
const i18nDescription = { ja: "読んだ本、読んでいる本", en: "Books read and being read" }

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const collection = (await getCollection("book")).sort(
    (a, b) => +new Date(b.data.started_at) - +new Date(a.data.started_at)
  )
  return i18nPaginate(collection, { paginate })
}

interface Props {
  page: Page<CollectionEntry<"book">>
  lang: string
}

const { page, lang } = Astro.props

const ogimage = `/og-image/${lang}/input.png`
const description = i18nDescription[lang]
---

<DefaultPageLayout content={{ title, description, ogimage }} lang={lang}>
  <BookPreviewList books={page.data} lang={lang} />
  <Paginator page={page} />
</DefaultPageLayout>
