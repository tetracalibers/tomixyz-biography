---
import { getCollection } from "astro:content"
import PostLayout from "$/layouts/post.astro"

import Callout from "../../../components/mdoc/Callout.astro"
import Link from "../../../components/mdoc/Link.astro"
import TweetEmbed from "../../../components/mdoc/TweetEmbed.astro"
import YTVideoEmbed from "../../../components/mdoc/YTVideoEmbed.astro"
import Tabs from "../../../components/mdoc/Tabs/Tabs.astro"

export async function getStaticPaths() {
  const pages = await getCollection("blog")
  return pages.flatMap((page) => {
    const [lang, defaultSlug] = page.slug.split("/")
    const { slug } = page
    const props = { page, lang }
    const params = { slug: defaultSlug, lang }
    const paths = { props, params }
    return slug.startsWith("ja") ? [paths, { ...paths, params: { ...paths.params, lang: undefined } }] : paths
  })
}

const { page } = Astro.props
const { slug } = Astro.params

const { Content } = await page.render()

const ogimage = `/og-image/blog/${slug}.png`
---

<PostLayout content={page.data} ogimage={ogimage}>
  <Content
    components={{
      Callout,
      Link,
      TweetEmbed,
      YTVideoEmbed,
      Tabs
    }}
  />
</PostLayout>
