---
import { getCollection } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"

export async function getStaticPaths() {
  const pages = await getCollection("page", (page) => page.slug.split("/").length === 1)

  return pages.map((page) => {
    const [lang] = page.slug.split("/")
    return {
      params: {
        lang
      },
      props: { page, lang }
    }
  })
}

const { page, lang } = Astro.props

const { Content } = await page.render()
const { data } = page
const { title, description, ogimage } = data
---

<DefaultPageLayout content={{ title, description, ogimage }} lang={lang}>
  <Content />
</DefaultPageLayout>
