---
import { getCollection } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import { tagToSlug } from "$/utils/tag"

let title = "Skill Tags"
let description = "技術ごとの作品一覧"

const projects = await getCollection("project")
const targets = [...projects]
const tags = [...new Set(targets.map((post) => post.data.tags).flat())]

const ogimage = "/og-image/tags.png"
---

<DefaultPageLayout content={{ title, description, ogimage }}>
  <ul class="tag-list">
    {
      tags.map((tag) => (
        <li>
          <a class="tag" href={`/tomixyz-biography/tags/${tagToSlug(tag)}`} title={`View posts tagged under "${tag}"`}>
            {tag}
          </a>
        </li>
      ))
    }
  </ul>
</DefaultPageLayout>

<style>
  .tag-list {
    @apply list-none flex gap-2 flex-wrap;
  }
  .tag {
    @apply inline-block text-xl px-4 py-1 rounded-full text-theme-primary bg-theme-dark-primary dark:bg-theme-primary dark:text-theme-dark-primary hover:bg-theme-primary hover:text-theme-dark-primary dark:hover:bg-theme-dark-primary dark:hover:text-theme-primary;
  }
</style>
