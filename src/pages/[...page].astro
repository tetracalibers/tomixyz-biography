---
import { getCollection } from "astro:content"
import DefaultPageLayout from "$/layouts/default.astro"
import { i18nPaths } from "$/utils/i18n/routing/single-page"

export async function getStaticPaths() {
  const collection = await getCollection("page")
  return i18nPaths({ collection })
}

const { page } = Astro.props

const { Content } = await page.render()
const { data } = page
const { title, description, ogimage, lang } = data
---

<DefaultPageLayout content={{ title, description, ogimage }} lang={lang}>
  <Content />
</DefaultPageLayout>
