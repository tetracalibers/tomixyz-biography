---
import { SITE } from "$/config"
const { page } = Astro.props

const isShow = page.url.prev || page.url.next
---

{
  isShow && (
    <div class="page__actions">
      {page.url.prev && (
        <a class="action__go-to-x" href={SITE.base + page.url.prev} title="Go to Previous">
          &larr; Prev
        </a>
      )}
      {page.url.next && (
        <a class="action__go-to-x" href={SITE.base + page.url.next} title="Go to Next">
          Next &rarr;
        </a>
      )}
    </div>
  )
}
<style>
  .page__actions {
    @apply flex justify-center md:justify-end gap-2;
  }
  .action__go-to-x {
    @apply text-base uppercase text-gray-500 dark:text-gray-300 hover:underline;
  }
</style>
