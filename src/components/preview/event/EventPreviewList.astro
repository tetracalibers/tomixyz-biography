---
import type { CollectionEntry } from "astro:content"
import EventPreview from "./EventPreveiw.astro"

interface Props {
  events: CollectionEntry<"event">[]
}

const { events } = Astro.props
const sortedPosts = events.sort((a, b) => new Date(b.date) - new Date(a.date))
---

<section class="post-preview__list">
  {sortedPosts.map((post) => <EventPreview event={post} />)}
</section>
<style>
  .post-preview__list {
    @apply flex flex-col gap-12;
  }
</style>
