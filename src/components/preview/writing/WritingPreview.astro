---
const { post } = Astro.props

const date = new Date(post.date)
const year = date.getFullYear().toString()
const month = (date.getMonth() + 1).toString()
---

<div class="post-preview">
  <div class="sm:w-20 md:w-32">
    <div class="post-preview__date">
      <span class="post-preview__date__day">{month.padStart(2, "0")}</span>
      <span class="post-preview__date__month-n-year">
        {year}
      </span>
    </div>
  </div>
  <div class="flex-1 flex flex-col justify-center">
    <h2 class="post-preview__title dark:text-theme-dark-primary">
      <a href={post.url}>{post.title}</a>
    </h2>
    {post.media && <p class="post-preview__desc">{post.media}</p>}
  </div>
</div>
<style>
  .post-preview {
    @apply flex gap-6;
  }
  .post-preview__date {
    @apply flex flex-col w-full text-center;
  }
  .post-preview__date__day {
    @apply text-5xl font-semibold text-gray-500 dark:text-gray-300;
  }
  .post-preview__date__month-n-year {
    @apply text-gray-500 dark:text-gray-300;
  }
  .post-preview__title {
    @apply text-xl font-semibold text-theme-primary dark:text-theme-dark-primary /* this doesn't works here */ hover:underline mb-2;
  }
  .post-preview__desc {
    @apply text-base leading-6 line-clamp-2 dark:text-white hyphens-auto;
  }
</style>
