---
import { tagToSlug } from "$/utils/tag"
import { SITE } from "$/config"
import Tag from "$components/article-header/Tag.astro"

interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<div class="inline-flex flex-wrap gap-x-2 gap-y-3 justify-center sm:justify-start">
  {
    tags.length > 0 &&
      tags.map((tag) => (
        <Tag href={`${SITE.base}/tags/${tagToSlug(tag)}`} title={tag}>
          {tag}
        </Tag>
      ))
  }
</div>
